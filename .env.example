# Frontend Port (Host)
CLIENT_PORT=80

# Backend Port (Host)
SERVER_PORT=3000

# Database Configuration
# Use 'db' if running with Docker Compose, or 'localhost' for local development
DB_HOST=db
DB_PORT=5432
DB_NAME=tiny_pm
DB_USER=postgres
DB_PASS=change_this_password

# Redis Configuration
# Use 'redis' if running with Docker Compose, or 'localhost' for local development
REDIS_HOST=redis
REDIS_PORT=6379

# Security Secrets
# generate a strong random string (e.g., `openssl rand -base64 32`)
JWT_SECRET=change_this_secret_key_in_production